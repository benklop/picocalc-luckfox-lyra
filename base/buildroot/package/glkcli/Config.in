config BR2_PACKAGE_GLKCLI
	bool "glkcli"
	depends on BR2_PACKAGE_GLKTERM
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_USE_WCHAR
	select BR2_PACKAGE_HOST_RUSTC
	help
	  A memory-safe Rust CLI launcher for GLK-based interactive fiction
	  interpreters. Automatically detects game file formats and launches
	  the appropriate interpreter from the glkterm package.

	  https://github.com/benklop/glkcli

comment "glkcli needs glkterm, a toolchain w/ C++, threads, wchar"
	depends on !BR2_PACKAGE_GLKTERM || !BR2_INSTALL_LIBSTDCPP || \
		!BR2_TOOLCHAIN_HAS_THREADS || !BR2_USE_WCHAR
